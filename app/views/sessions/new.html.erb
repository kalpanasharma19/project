<% @page_title = "UserAuth | Login" -%>
<div class="container">
  <h1>Log in</h1>
  <%= form_tag(:action => 'create') do %>
    <div class="row">
      <div class="input-field col s6" >
        <p>Username:</br> <%= text_field_tag(:username) %></p>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6" >
        <p>Password:</br> <%= password_field_tag :login_password %></p>
      </div>
    </div>
    <p><%= submit_tag("Log In") %></p>
  <% end %>
  <h5> First Time Visitor?...Please SignUp First</h5>
</div>



