<%= render 'shared/errors', object: @customer %>

<div class="container">
    <h2>Sign Up</h2>
    <%= form_for(:customer, :url => {:controller => 'customers', :action => 'create'}) do |f| %>
      <div class="row">
        <div class="input-field col s6" >
          <p> Username:</br> <%= f.text_field :name%> </p>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6" >
          <p> Email:</br> <%= f.text_field :email%> </p>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6" >
          <p> Phone Number:</br> <%= f.text_field :phone_number%> </p>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6" >
          <p> Password:</br> <%= f.password_field :password%></p>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6" >
          <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
        </div>
      </div>
      <%= f.submit :Signup %>
    <% end %>
  </div>
</div>

