<p>
  <strong>Product Name: </strong>
  <%= @product.name %>
  <font size = "5"><%= link_to 'Edit', edit_product_path(@product) if is_admin? %></font>
</p>

<%= link_to image_tag(@product.image.url), @product.image.url, target: '_blank' %>

<p>
  <strong>Description: </strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price: </strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity in stock:</strong>
  <%= @product.stock_quantity %>
</p>
<%= link_to "Add to Cart", "javascript:void(0)", product_id: @product.id, class: "add_to_cart"  if current_customer && @product.stock_quantity > 0 %>

