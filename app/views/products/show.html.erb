<%= render 'shared/header' %>

<p>
  <strong>Product Name: </strong>
  <%= @product.name %>
</p>

<%= link_to image_tag(@product.image.url), @product.image.url, target: '_blank' %>

<p>
  <strong>Description: </strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price: </strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity in stock:</strong>
  <%= @product.stock_quantity %>
</p>

<%= if is_admin?
      link_to 'Edit', edit_product_path(@product)
    end%>
<%= link_to 'Back', products_path %>
<%=link_to 'Add to Cart', shopping_cart_items_path(product_id: @product.id), method: :post if current_customer && @product.stock_quantity > 0 %></td>

